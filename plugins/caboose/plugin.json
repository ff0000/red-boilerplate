{
	"name": "caboose",
	"description": "RED Interactive's internal Sass + Compass framework",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/ff0000/caboose.git"
	},
	"dependencies": {
		"grunt-img": "~0.1.4"
	},
	"systemDependencies": {
		"ruby": {
			"version": ">= 1.8.7",
			"install": "https://gist.github.com/3900651",
			"upgrade": "brew update && brew upgrade rbenv"
		},
		"gem": ">= 1.3.6",
		"bundle": {
			"version": ">= 1.2.0",
			"install": "gem install bundler",
			"upgrade": "gem update bundler"
		},
		"jpegtran": {
			"version": "*",
			"install": "brew install jpeg",
			"upgrade": "brew update && brew upgrade jpeg"
		},
		"optipng": {
			"version": ">= 0.6.3",
			"install": "brew install optipng",
			"upgrade": "brew update && brew upgrade optipng"
		}
	},
	"scripts": {
		"install" : "./config/init/caboose.js",
		"update" : "./config/init/caboose.js"
	},
	"config": {
		"scope": "project/source",
		"replaceVars": false,
		"requiredPaths": [
			".bundle",
			"Gemfile",
			"Gemfile.lock"
		],
		"excludedPaths": [
			".bundle",
			".sass-cache"
		]
	}
}
