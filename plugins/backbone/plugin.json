{
	"name": "backbone",
	"description": "RED backbone boilerplate",
	"dependencies": {
		"jshint": "2.1.3",
		"requirejs": "~2.1.8",
		"colors": "~0.6.2",
		"grunt-modernizr": "~0.3.0",
		"bower": "~0.9.2",
		"uglify-js": "~2.4.0",
		"handlebars": "~1.0.12"
	},
	"devDependencies": {
		"grunt-contrib-handlebars": "~0.5.10"
	},
	"systemDependencies": {
		"node": {
			"version": ">=0.9",
			"install": "brew update && brew install node",
			"upgrade": "brew update && brew upgrade node"
		}
	},
	"scripts" : {
		"install" : "./config/init/backbone.js",
		"update" : "./config/init/backbone.js"
	},
	"config": {
		"scope": "project/source/js",
		"replaceVars": true,
		"promptOnStart": true
	}
}
